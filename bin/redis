#!/usr/bin/env python
import os
import sys

from urlparse import urlparse

def __main__(cmd, url=None):
    command = 'redis-cli'
    if url is None:
        params = [command]
    else:
        parsed = urlparse(url)
        params = [
            command,
            '-a', str(parsed.password),
            '-h', str(parsed.hostname),
            '-p', str(parsed.port),
        ]
    
    os.execvp(command, params)

if __name__ == "__main__":
    __main__(*sys.argv)
