ignore = ~/.config/hgignore

[alias]
list = locate --include . '*'
ls = list

[pager]
pager = less -FinRSX

[extensions]
alias = ~/.config/hg-extensions/alias.py
#autosync = ~/.config/hg-extensions/autosync.py
