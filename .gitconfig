[user]
	name = Eric Wald
	email = eswald@gmail.com
[alias]
	w = !git branch -a && git log --branches --pretty=oneline --graph --decorate --since='2 months ago'
	where = !git branch -a && git log --branches --oneline --graph --decorate --simplify-by-decoration --since='2 months ago'
	sh = show --stat --summary
	st = status -sb
	co = clone
	lg = log --graph --date-order --decorate --oneline
	info = log -1 --oneline
	list = ls-files
	ls = !git ls-files \"$@\" | less -FiRSn && :
	ignored = ls-files --others --ignored --exclude-standard --directory
	cleanable = clean -dXn
	uncommit = reset --soft HEAD^
	unstage = reset HEAD --
	cached = diff --cached
	dc = diff --cached
	ds = diff --staged
	glog = log --graph --date-order --pretty=format:\"%h %ae: %s\" --decorate --abbrev-commit
[core]
	excludesfile = ~/.config/gitignore
[color]
	ui = auto
[pack]
	windowMemory = 1g
[push]
	default = tracking
[diff "cp437"]
	textconv = iconv -f cp437 -t utf8
